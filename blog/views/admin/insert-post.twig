{% extends "layout.twig" %}
{% block content %}

    <a class="btn btn-primary" style="margin-bottom: 10px" href="{{ 'admin/posts' | url }}">Back</a>
    <form method="post" onsubmit="return validateForm()">
        {% if errors %}
            {% include ('partials/errors.twig') %}
        {% endif %}
        {% if result %}

            <div class="alert alert-success">
                Success!!!
            </div>

        {% endif %}
        <div class="form-group">
            <label for="inputTitle">Title</label>
            <input class="form-control" type="text" name="title" id="inputTitle">
        </div>
        <div class="form-group">
            <label for="inputImg">Image</label>
            <input class="form-control" type="text" name="img" id="inputImg">
        </div>
        <div class="form-group">
            <label for="inputContent">Content</label>
            <textarea class="form-control" name="content" id="inputContent" rows="10"></textarea>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" style="margin-top: 10px" type="submit" value="Save">
        </div>
    </form>

{% endblock %}

{% block js %}

<script>

    function validateForm() {
        var title = document.getElementById('inputTitle').value.trim();
        var content = document.getElementById('inputContent').value.trim();
        if (title === '' || content === ''){
            swal({
                type: 'error',
                title: 'Oops...',
                text: 'Title and Content are required...'
            });
            return false;
        }
    }

</script>

{% endblock %}