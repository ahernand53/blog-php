{% extends "layout.twig" %}

{% block content %}
    {%  for blogPost in blogPosts %}

        <div class="blog-post">
            <div class="blog-post-title">
                <a href="{{ 'details/' | url }}{{ blogPost.id }}"><h2>{{ blogPost.title }}</h2></a>
                <p>Jan 1,2018 by <a href=""title="">Gabriel Manjarres</a></p>
            </div>
            <div class="blog-post-image">
                {% if blogPost.img_url %}
                    <img src="{{ blogPost.img_url }}" alt="">
                {% endif %}
            </div>
            <div class="blog-post-content">
                {{ blogPost.content }}
            </div>
        </div>

    {% endfor %}
{% endblock %}